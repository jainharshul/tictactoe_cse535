<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <!-- Game page title -->

    <TextView
        android:id="@+id/gamePageTitleTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gamePageTitle"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/currLevelTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currLvlStr"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.203" />

    <TextView
        android:id="@+id/updateTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/waitingStr"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.343" />

    <TextView
        android:id="@+id/levelTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hardLvlStr"
        android:textColor="@color/red"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.199" />

    <Button
        android:id="@+id/startBtn"
        android:layout_width="99dp"
        android:layout_height="40dp"
        android:background="@drawable/startbtn"
        android:text="@string/startGameStr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.897"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.201"
        android:onClick="startBtnHandler"/>

    <!-- will create the tic tac toe board -->
    <Button
        android:id="@+id/restartBtn"
        android:layout_width="138dp"
        android:layout_height="49dp"
        android:background="@drawable/startbtn"
        android:onClick="restartBtnHandler"
        android:text="@string/restartBtnStr"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.963" />

    <GridLayout
        android:id="@+id/gameBoardLayout"
        android:layout_width="330dp"
        android:layout_height="351dp"
        android:background="@color/white"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75">

        <!-- will create the buttons for each "square" -->
        <Button
            android:id="@+id/gridBtn_0_0"
            android:layout_width="110dp"
            android:layout_height="117dp"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="50sp"
            android:text=""
            android:background="@color/black"
            android:onClick="chooseSquareBtn"/>

        <Button
            android:id="@+id/gridBtn_0_1"
            android:layout_width="110dp"
            android:layout_height="117dp"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="50sp"
            android:text=""
            android:background="@drawable/btn_border_column"
            android:onClick="chooseSquareBtn"/>

        <Button
            android:id="@+id/gridBtn_0_2"
            android:layout_width="110dp"
            android:layout_height="117dp"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="50sp"
            android:text=""
            android:background="@color/black"
            android:onClick="chooseSquareBtn"/>

        <Button
            android:id="@+id/gridBtn_1_0"
            android:layout_width="110dp"
            android:layout_height="117dp"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="50sp"
            android:text=""
            android:background="@drawable/btn_border_row"
            android:onClick="chooseSquareBtn"/>

        <Button
            android:id="@+id/gridBtn_1_1"
            android:layout_width="110dp"
            android:layout_height="117dp"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/btn_border"
            android:textSize="50sp"
            android:text=""
            android:onClick="chooseSquareBtn"/>

        <Button
            android:id="@+id/gridBtn_1_2"
            android:layout_width="110dp"
            android:layout_height="117dp"
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="50sp"
            android:text=""
            android:background="@drawable/btn_border_row"
            android:onClick="chooseSquareBtn"/>


        <Button
            android:id="@+id/gridBtn_2_0"
            android:layout_width="110dp"
            android:layout_height="117dp"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="50sp"
            android:text=""
            android:background="@color/black"
            android:onClick="chooseSquareBtn"/>

        <Button
            android:id="@+id/gridBtn_2_1"
            android:layout_width="110dp"
            android:layout_height="117dp"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="50sp"
            android:text=""
            android:background="@drawable/btn_border_column"
            android:onClick="chooseSquareBtn"/>

        <Button
            android:id="@+id/gridBtn_2_2"
            android:layout_width="110dp"
            android:layout_height="117dp"
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="50sp"
            android:text=""
            android:background="@color/black"
            android:onClick="chooseSquareBtn"/>


    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>